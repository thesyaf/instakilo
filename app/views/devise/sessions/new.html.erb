
<div class="login_box">
  <div class="logo_title">Instakilo</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, class: "login_fields mx-auto", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, class: "login_fields mx-auto", placeholder: "Password", autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "login_button mx-auto" %>
    </div>


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
