          <%= link_to 'Edit', edit_photo_path(@photo.id), class: "dropdown-item" %>
          <a class="dropdown-item" href="#">Delete</a>
        </div>
    </div>

  </div>
  <img class="card-img-top feed_photo" src="<%= @photo.image_url %>">
