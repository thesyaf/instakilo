<div class="card mx-auto col-12 col-sm-7">
  <div class="header">
    <div class="card_user d-flex justify-content-start">
      <!-- put user image here -->
      <p><%= @photo.user.username %></p>
      <p><%= @photo.user.profile.username %></p>


        <div class="dropdown-toggle ml-auto" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= image_tag("icon_options.png") %>
