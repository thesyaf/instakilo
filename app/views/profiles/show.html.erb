
<div class="container profile_box">
  <div class="row">
    <div class= "col-5">
      <%= image_tag @profile.avatar_url, :class => 'profile_avatar' %>
      <p class="profile_name"><%= @profile.first_name + " " + @profile.last_name %></p>

    </div>

    <div class="col-7">
      <p class="profile_username"><%= @profile.username %></p>

        <% if @profile.user == current_user %>
            <%= link_to 'Edit Profile', edit_profile_path, class: "btn btn-outline-dark" %>
        <% else %>
        <%= link_to 'Follow', edit_profile_path, class: "btn btn-outline-dark" %>

        <% end %>
    </div>


    <div class="col-12">
      <p class="profile_bio"><%= @profile.bio %></p>
    </div>

  </div>
</div>


<div class="container user_photo_feed">
    <div class="row justify-content-start">
      <% @profile.user.photos.reverse.each do |photo| %>

      <div class="grid col-4 col-sm-7">

        <img class="card-img-top feed_grid" src="<%= photo.image_url %>">

      </div>
      <% end %>
    </div>

</div>
